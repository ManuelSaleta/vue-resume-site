  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "lib": ["ES2020"],
    "skipLibCheck": true,

    "strict": true
  },
  "include": ["src"]
}
